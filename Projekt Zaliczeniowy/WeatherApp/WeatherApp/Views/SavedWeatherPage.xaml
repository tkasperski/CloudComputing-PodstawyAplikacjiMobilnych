<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="WeatherApp.Views.SavedWeatherPage">
    <ContentPage.Content>
        <ListView x:Name="weatherList" RowHeight="200">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" HorizontalOptions="Start" Spacing="5" Margin="10,0,0,0">
                           <Label Text="{Binding city}" />
                           <Label Text="{Binding temperature}" />
                           <Label Text="{Binding humidity}" />
                           <Label Text="{Binding wind}" />
                           <Label Text="{Binding gauge}" />
                           <Label Text="{Binding cloudiness}" />
                           <Label Text="{Binding dateCreated}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
